    public int Age { get; set; }

    public void Tick(int mstime)
    {
        // Adjust Attributes based on time inputted
    }

    public bool ShouldIDie()
    {
        // Has the organism died based on its current state
        if (Health > 0)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
